.index h1
  font-size: 1em
  font-weight: bold
  line-height: 1.2
  float: left
  background-color: #f14207
  color: #fff
  padding: 0.25em 0.5em
  text-align: left
  margin-bottom: 0.75em

.index ul
  list-style: none
  margin: 0
  padding: 0
  clear: both

.index li
  margin-top: 1.5em

.index .title
  font-size: 1em;
  font-weight: bold
  line-height: 1.2

.month-group
  margin-top: 2.5em
  position: relative

.new-post h1
  color: title-color

article h1
  color: #00b7ff

article p
  color: #ffffff

.tag span
  background: #f8c150
  color: #963
  border: 1px solid transparent
  border-width: 0 1px
  border-radius: 5px
  display: inline-block
  zoom: 1
  font-size: 11px
  font-weight: bold
  overflow: hidden
  padding: 0 5px
  text-align: center
  text-decoration: none
  text-shadow: 1px 1px 1px rgba(255,255,255,0.5)
  white-space: nowrap
  margin-right: 6px

.tip
  color: #898989
  display: inline-block
  font-size: .65em
  margin-left: 10px
  white-space: nowrap
  max-width: 300px
