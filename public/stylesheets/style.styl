body
  background: #1c212b
  padding: 50px
  font: normal 1.25em/1.5 "PT Serif", Cambria, Georgia, Times, "Times New Roman", serif

a
  color: #00B7FF

.container
  margin: 0 auto
  max-width: 40em
  width: 80%

.index h1
  font-size: 1em
  font-weight: bold
  line-height: 1.2
  float: left
  background-color: #F14207
  color: #fff
  padding: 0.25em 0.5em
  text-align: left
  margin-bottom: 0.75em

.index ul
  list-style: none
  margin: 0
  padding: 0
  clear: both

.index li
  margin-top: 1.5em

.index .title
  font-size: 1em;
  font-weight: bold
  line-height: 1.2



