extends ../layout

block content
  section.sign-in
    h1 Sign in to continue to labpad

    form(name="signin", method="post")
      div.input
        label(for="email") Email
        input(type="email", name="email")
      div.input
        label(for="password") Password
        input(type="password", name="password")
      div
        input(type="submit", value="Sign in", class="button orange")
